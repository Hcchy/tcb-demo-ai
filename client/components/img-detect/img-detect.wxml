<img-detect>
  <view class="image-container">
    <div class="image" style="background-image: url({{imgUrl}})"/>
  </view>
  <view class="button-container">
      <button
        type="primary"
        bindtap="handleUploadTap"
      >
        {{uploadText}}
      </button>
      <button
        type="primary"
        disabled="{{!hasUploaded}}"
        bindtap="handleRecognizeTap"
      >
        {{recognizeText}}
      </button>
  </view>
</img-detect>